<%= @employer.name %>

<br>
<h1>Your Openings</h1>
<% @openings.each do |opening| %>
  <br>
  <%= link_to opening.title, opening_path(opening)  %>
  <br>
  <%= link_to "Review Applications", application_path(opening) %>
  <br>
<% end %>

<h1>Your Matches</h1>

<% @users.each do |user| %>
 <p>You selected <%= user.name %> as a potential candidate for your opening "<%= user.openings.find_by(employer_id: @employer.id).title %>"</p>
 <br>
<% end %>
