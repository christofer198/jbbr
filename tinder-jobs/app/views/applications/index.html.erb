<div class="container-fluid text-center bg-1" style="margin-top: 5%; padding-top: 20vh">
      <div class="row col-md-6 col-md-push-3" style="border-radius: 5px; background-color: #ecf0f1; padding-bottom: 1%;">

    <% if @application.nil? == false %>
    <h1><%= @opening.title %></h1>
    <br>
      <p><%= @applicant.nil? ? "No Resume Available" : @applicant.description %></p>

        <%= form_tag(application_path(@application), method: :patch) do %>
          <%= hidden_field_tag "id", @application.id %>
          <%= button_tag "Like", name: "like", value: "true", class: 'btn btn-primary pull-right' %>
          <%= button_tag "Reject", name: "like", value: "false", class: 'btn btn-primary pull-left' %>
        <% end %>
    <% end %>

     <!-- link to the application id, the controller will change the value to true or false -->
   </div>
</div>
